{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-waracle": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "bootstrap": "rm -rf packages/*/node_modules && yarn build:deps && yarn lerna bootstrap",
    "clean": "lerna clean",
    "build:deps": "yarn build:mocks",
    "build:core": "tsc -b ./packages/core/tsconfig.json",
    "build:mocks": "tsc -b ./packages/mocks/tsconfig.json",
    "lint:fix": "eslint -c .eslintrc.json --fix",
    "test:core": "jest ./packages/core --config=./packages/core/jest.config.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
